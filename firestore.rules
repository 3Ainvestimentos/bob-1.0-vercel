rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra Geral: Bloqueia todo o acesso por padrão.
    match /{document=**} {
      allow read, write: if false;
    }

    // Usuários autenticados podem LER seus próprios dados, mas a escrita
    // é gerenciada pelo backend (Server Actions), que tem acesso privilegiado.
    // Esta regra permite que a Server Action 'removeFileFromConversation' funcione.
    match /users/{userId}/{document=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if true; // PERMITE ESCRITA PELO BACKEND (SERVER ACTIONS)
    }

    // Permite que usuários autenticados criem logs de alerta, mas não os leiam ou modifiquem.
    match /dlp_alerts/{alertId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
    match /legal_issue_alerts/{alertId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
    
    // Ninguém pode ler ou escrever na coleção de chats arquivados diretamente.
    match /archived_chats/{chatId} {
        allow read, write: if false;
    }
  }
}
