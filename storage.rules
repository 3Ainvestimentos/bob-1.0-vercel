
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Restringe o acesso aos arquivos.
    // O caminho 'users/{userId}/{allPaths=**}' corresponde ao caminho de armazenamento dos arquivos.
    // A condição 'request.auth != null && request.auth.uid == userId' garante que:
    // 1. O usuário esteja autenticado (request.auth != null).
    // 2. O usuário só possa acessar arquivos dentro de sua própria pasta (request.auth.uid == userId).
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
