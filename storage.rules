rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra geral: nega o acesso por padrão
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Permite que usuários autenticados leiam e escrevam em sua própria pasta
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
